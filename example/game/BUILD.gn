import("//sky/build/sky_app.gni")

sky_app("game") {
  main_dart = "main.dart"
  manifest = "sky.yaml"

  if (is_android) {
    apk_name = "Asteroids"

    deps = [
      "//sky/packages/sky/example/game/apk:resources",
    ]
  } else if (is_ios) {
    info_plist = "ios/Info.plist"
    launcher_resources = [
      "assets/Icon.png",
      "assets/Icon@2x.png",
      "ios/LaunchScreen.storyboardc",
    ]
  } else if (is_mac) {
    info_plist = "mac/Info.plist"
    xibs = [ "mac/sky_mac.xib" ]
  }
}
